{
  "compilerOptions": {
    "incremental": true,
    "target": "es2017", 
    "jsx": "preserve",
    "lib": ["dom", "dom.iterable", "esnext"],
    "baseUrl": ".",
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "allowJs": true,
    "strict": false,
    "noEmit": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "isolatedModules": true,
    "composite": false
  },
  "references": [
    { "path": "./packages/db" },
    { "path": "./packages/shared" },
    { "path": "./packages/ui" },
    { "path": "./packages/hooks" },
    { "path": "./packages/services" },
    { "path": "./packages/storage" },
    { "path": "./packages/queue" },
    { "path": "./packages/stripe" },
    { "path": "./packages/ai-service" },
    { "path": "./apps/api-gateway" },
    { "path": "./apps/render-worker" },
    { "path": "./apps/web" }
  ],
  "exclude": ["node_modules"]
} 